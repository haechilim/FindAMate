<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#323232">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/back"
        android:padding="30dp"/>

    <FrameLayout
        android:id="@+id/studentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="〈"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:paddingRight="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/classInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="길음중학교 2학년 3반"
            android:textColor="#ffffff"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학생들이 선호도 지정을 마칠때까지 잠시 기다려주세요."
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="#ffffff"
            android:paddingRight="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모두 완료하기 전에도 짝찾기를 실행할수 있습니다."
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:paddingRight="15dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/startMatching"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/match" />

    <FrameLayout
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:alpha="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:text="〈"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="15dp"
                android:text="선린인터넷고등학교 1학년 1반"
                android:textColor="#ffffff" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:alpha="0.6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/avatar01" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="나선린"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="피자 사주세요!!"
                    android:textColor="#ffffff"
                    android:textSize="7sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center"
                android:text="100%"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:text="학생들이 선호도 지정을 마칠때까지 잠시 기다려주세요."
                android:textColor="#ffffff"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingRight="15dp"
                android:text="모두 완료하기 전에도 짝찾기를 실행할수 있습니다."
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            android:src="@drawable/match" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="150dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.8"
            android:text="학생들에게 문자메세지를 전송하였습니다. 모든 학생들이 선호하는 짝을 선택할때까지 기다려주세요."
            android:textColor="#EEBE25"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="5dp"
            android:rotation="60"
            app:srcCompat="@drawable/arrow10" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="125dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.8"
            android:text="짝 선택을 모두 마친 학생은 애니메이션이 멈추게 되요."
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="60dp"
            android:rotation="-45"
            app:srcCompat="@drawable/arrow7" />

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="130dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.8"
            android:text="학생들이 각자의 선호하는 짝을 선택하는 중입니다."
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="120dp"
            android:rotation="-150"
            app:srcCompat="@drawable/arrow1" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="170dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.85"
            android:text="이번 버전은 아직 문자메세지 전송 기능을 제공하지 않습니다. 바로 짝찾기 버튼을 터치해주세요!"
            android:textColor="#3CD0BC"
            android:textSize="20sp" />
    </FrameLayout>

</FrameLayout>
