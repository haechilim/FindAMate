<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#323232">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/back2"
        android:padding="30dp"/>

    <FrameLayout
        android:id="@+id/studentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="〈"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:paddingRight="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/classInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="길음중학교 2학년 3반"
            android:textColor="#ffffff"
            android:gravity="center_vertical|right"
            android:paddingRight="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학생들이 선호도 지정을 마칠때까지 잠시 기다려주세요."
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="#ffffff"
            android:paddingRight="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모두 완료하기 전에도 짝찾기를 실행할수 있습니다."
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:paddingRight="15dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/startMatching"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/match" />
</FrameLayout>
