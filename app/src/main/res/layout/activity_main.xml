<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back" />

    <FrameLayout
        android:id="@+id/studentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="1"
        android:orientation="horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="로그아웃"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/classInformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="10"
                android:gravity="center_vertical|right"
                android:textColor="#ffffff" />


            <ImageView
                android:id="@+id/classSettingButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/setting" />

        </LinearLayout>

        <ImageView
            android:id="@+id/studentSettingButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginTop="130dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/addstudent" />

        <ImageView
            android:id="@+id/logButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="15dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/history" />

        <ImageView
            android:id="@+id/startButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/run" />

        <ImageView
            android:id="@+id/simulationButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="65dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/simulation" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:alpha="0.5"
            android:text="로그아웃"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:alpha="0.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="10"
                android:gravity="center_vertical|right"
                android:text="학급을 설정해 주세요."
                android:textColor="#ffffff" />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/setting" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:alpha="0.6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/avatar01" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="이름"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="상태메시지"
                    android:textColor="#ffffff"
                    android:textSize="7sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center"
                android:text="100%"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </FrameLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginTop="130dp"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            android:src="@drawable/addstudent" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="15dp"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            android:src="@drawable/history" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            android:src="@drawable/run" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="65dp"
            android:adjustViewBounds="true"
            android:alpha="0.7"
            android:scaleType="fitCenter"
            android:src="@drawable/simulation" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="right|top"
            android:layout_marginTop="30dp"
            android:rotation="120"
            app:srcCompat="@drawable/arrow14" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginTop="45dp"
            android:layout_marginRight="80dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.8"
            android:rotation="-10"
            android:text="학급 정보를 수정할 수 있습니다."
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="170dp"
            android:rotation="130"
            app:srcCompat="@drawable/arrow8" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.8"
            android:rotation="-5"
            android:text="선생님이 담당하고 계신 학급의 학생들을 빠짐없이 등록해주세요."
            android:textColor="#EEBE25"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="60dp"
            android:rotation="-45"
            app:srcCompat="@drawable/arrow7" />

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="125dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.8"
            android:text="추가된 학생은 이렇게 표시됩니다."
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="50dp"
            android:rotation="40"
            app:srcCompat="@drawable/arrow10" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.8"
            android:text="학생의 만족도를 나타냅니다."
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="35dp"
            android:rotation="70"
            app:srcCompat="@drawable/arrow10" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.8"
            android:text="이름과 상태 메세지 입니다."
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="45dp"
            android:rotation="-80"
            app:srcCompat="@drawable/arrow13" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="75dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.8"
            android:rotation="20"
            android:text="과거 매칭 결과를 확인해볼 수 있습니다."
            android:textColor="#EEBE25"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="85dp"
            android:layout_marginBottom="95dp"
            android:rotation="70"
            app:srcCompat="@drawable/arrow4" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="90dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.8"
            android:rotation="-10"
            android:text="결과가 궁금하면 미리 시뮬레이션 해볼 수 있습니다."
            android:textColor="#EA783F"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="120dp"
            android:rotation="-150"
            app:srcCompat="@drawable/arrow1" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="170dp"
            android:fontFamily="@font/nanum_pen_script_regular"
            android:lineSpacingMultiplier="0.85"
            android:text="학생들 각자가 선호하는 짝을 여러가지 방식으로 공평하게 찾아줍니다. 참고로 짝찾기 회수가 많아질수록 모두에게 좀더 공평한 결과가 나옵니다."
            android:textColor="#3CD0BC"
            android:textSize="20sp" />
    </FrameLayout>
</FrameLayout>
